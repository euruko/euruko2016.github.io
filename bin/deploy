#!/bin/bash

# Exit on errors. We don't want you .git directory removed by accident.
set -e

bundle exec middleman build -e production

pushd build

rm -rf .git

git init .
git remote add origin git@github.com:euruko/euruko2016.github.io.git
git add .
git commit -m "Deploy on $(date)"
git checkout -b gh-pages
git push origin gh-pages -f

popd
